{
  "name": "gorvey-claude-plugin",
  "version": "1.0.0",
  "description": "Claude插件模板项目",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "postcss src/styles.css -o dist/styles.css",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "claude",
    "plugin",
    "template"
  ],
  "author": "gorvey",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.9.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gorvey/gorvey-claude-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/gorvey/gorvey-claude-plugin/issues"
  },
  "homepage": "https://github.com/gorvey/gorvey-claude-plugin#readme"
}